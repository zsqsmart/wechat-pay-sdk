{
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["DOM", "ESNext"],
    "strictNullChecks": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "target": "es6",
    "module": "esnext",
    "skipLibCheck": true,
    "allowJs": true,
    "verbatimModuleSyntax": true,
    "stripInternal": true,
    "paths": {
      "src/*": ["src/*"],
      "server/*": ["../server/src/*"],
    },
  },
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "locale",
    "scripts",
    "**/__tests__/**/*",
    "site/dist",
  ],
}
